# Node environment
NODE_ENV=production

# PostgreSQL Database Connection (Neon DB)
# Copy from your .env file and update with production values
POSTGRES_URL=postgresql://username:password@host.region.provider.neon.tech/database?sslmode=require
POSTGRES_PRISMA_URL=postgresql://username:password@host.region.provider.neon.tech/database?connect_timeout=15&sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://username:password@host.region.provider.neon.tech/database?sslmode=require
POSTGRES_USER=your_username
POSTGRES_HOST=your-host.region.provider.neon.tech
POSTGRES_PASSWORD=your_password
POSTGRES_DATABASE=your_database
POSTGRES_URL_NO_SSL=postgresql://username:password@host.region.provider.neon.tech/database

# Next-Auth Configuration
# Generate: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here
AUTH_URL=http://localhost:3000/api/auth

# Neon Auth (Optional - if using Stack Auth)
NEXT_PUBLIC_STACK_PROJECT_ID=your_project_id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_publishable_key
STACK_SECRET_SERVER_KEY=your_secret_key